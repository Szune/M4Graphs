<local:ModelElementBase x:Class="M4Graphs.Wpf.Components.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M4Graphs.Wpf.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="NodeGrid" MouseDown="Grid_MouseDown" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Border x:Name="NodeBackground" Background="DarkGoldenrod" BorderBrush="Black" BorderThickness="2" CornerRadius="8"/>
        <Border VerticalAlignment="Center" x:Name="TextBorder">
            <local:StrokeTextBlock x:Name="NodeText" TextBrush="White" StrokeBrush="Black" TextAlignment="Center"/>
        </Border>
    </Grid>
</local:ModelElementBase>
